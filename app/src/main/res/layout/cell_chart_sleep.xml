<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardElevation="@dimen/activity_chart_sleep_card_elevation"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/sleep_chart_activity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/activity_chart_sleep_chart_padding" />

        <com.og.health.sleeptracker.views.ProgressLineChartView
            android:id="@+id/sleep_chart_activity_linechart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_chart_sleep_chart_height"
            android:layout_below="@+id/sleep_chart_activity_textview"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/activity_chart_sleep_chart_padding" />
    </android.support.v7.widget.CardView>
</layout>
